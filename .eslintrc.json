{
    "parser": "babel-eslint", 
    "env": {
        "es6": true,
        "node": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "sourceType": "module"
    },
    "rules": {
        "indent": [
            "error", 
            "tab"
        ],
        "linebreak-style": 0,
        "semi": [
            "error",
            "always"
        ], 
        "no-console": [
            "error", 
            {
                "allow": ["log"]
            }
        ], 
        "no-unused-vars": ["off"], 
        "no-unreachable": ["off"], 
        "no-undef": ["off"], 
        "strict": 0
    }
}